<p id="notice"><%= notice %></p>

<!-- content -->
<div class="container content">
  <div class="content-content">
    <div class="container container-news">
      <div class="row news-info">
        <div class="col-xl-10 col-lg-10 col-md-12 col-sm-12">
          <h2 class="font-weight-light news-title"><%= @news.title %></h2>
        </div>
        <div class="col-xl-2 col-lg-2 col-md-12 col-sm-12">
          <h5 align="right" class="news-date"><%= @news.add_date %></h5>
        </div>
      </div>
      <div class="row">
        <div class="col-xl-4 col-lg-4 col-md-12 col-sm-12">
          <%= image_tag @news.image, class: 'news-image' %>
        </div>
        <div class="col-xl-8 col-lg-8 col-md-12 col-sm-12">
          <p class="font-weight-light news-content"><%= simple_format(@news.content) %></p>
        </div>
      </div>
    </div>
  </div>
</div>

